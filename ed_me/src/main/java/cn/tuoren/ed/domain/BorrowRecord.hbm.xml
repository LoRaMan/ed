<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.tuoren.ed.domain">

	<class name="BorrowRecord" table="t_borrowRecord">
		<id name="recordId">
            <generator class="native"/>
		</id>
		<property name="borrowedDate"/>
		<property name="borrowedStatus"/>
		<property name="returnDate"/>
		<!-- 与Book类：多对1 -->
		<many-to-one name="book" column="bookId" class="Book"></many-to-one>
		<!-- 与User类：多对一 -->
		<many-to-one name="user" column="userId" class="User"></many-to-one>
	</class>

</hibernate-mapping>

