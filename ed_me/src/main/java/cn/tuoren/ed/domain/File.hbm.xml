<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.tuoren.ed.domain">

	<class name="EdFile" table="t_file">
		<id name="fileId">
            <generator class="native"/>
		</id>
		<property name="fileType"/>
		<property name="fileName"/>
		<property name="fileSize"/>
		<property name="uploadTime"/>
		<property name="uploader"/>
		<property name="fileStatus"/>
		<property name="secretLevel"/>
		<property name="version"/>
		<property name="path"/>

		<!-- 与Audit类：1对1 -->
		<one-to-one name="audit" class="Audit" cascade="all"></one-to-one>
		<!-- 与Approve类：1对1 -->
		<one-to-one name="approve" class="Approve" cascade="all"></one-to-one>
		<!-- 与Projcet类：多对1 -->
		<many-to-one name="project" column="projectId" class="Project" lazy="false" fetch="join"></many-to-one>
		<!-- 与FileCategory类：多对1 -->
		<many-to-one name="category" column="categoryId" class="FileCategory" lazy="false" fetch="join"></many-to-one>
		<!-- 与User类：多对多 -->
		<set name="users" table="t_user_file" lazy="false">
			<key column="fileId"></key>
			<many-to-many class="User" column="userId"></many-to-many>
		</set>
		
	</class>

</hibernate-mapping>
